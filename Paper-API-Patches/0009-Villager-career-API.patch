Subject: [PATCH] Villager career API


diff --git a/src/main/java/org/bukkit/entity/Villager.java b/src/main/java/org/bukkit/entity/Villager.java
index f2095f61..9bf2cabf 100644
--- a/src/main/java/org/bukkit/entity/Villager.java
+++ b/src/main/java/org/bukkit/entity/Villager.java
@@ -77,15 +77,14 @@ public interface Villager extends Ageable, NPC, InventoryHolder, Merchant {
     /**
      * Sets this villager's riches.
      *
-     * @see Villager#getRiches()
-     *
      * @param riches the new riches
+     * @see Villager#getRiches()
      */
     void setRiches(int riches);
 
     /**
      * Represents the various different Villager professions there may be.
-     * Villagers have different trading options depending on their profession,
+     * Villagers have different trading options depending on their profession and their {@link Career Career}.
      */
     public enum Profession {
         /**
@@ -261,4 +260,53 @@ public interface Villager extends Ageable, NPC, InventoryHolder, Merchant {
             }
         }
     }
+
+    /**
+     * Represents the various different Villager careers there may be.
+     */
+    public enum Career {
+        FARMER(Profession.FARMER, 1),
+        FISHERMAN(Profession.FARMER, 2),
+        SHEPHERD(Profession.FARMER, 3),
+        FLETCHER(Profession.FARMER, 4),
+
+        LIBRARIAN(Profession.LIBRARIAN, 1),
+        CARTOGRAPHER(Profession.LIBRARIAN, 2),
+
+        CLERIC(Profession.PRIEST, 1),
+
+        ARMORER(Profession.BLACKSMITH, 1),
+        WEAPON_SMITH(Profession.BLACKSMITH, 2),
+        TOOL_SMITH(Profession.BLACKSMITH, 3),
+
+        BUTCHER(Profession.BUTCHER, 1),
+        LEATHERWORKER(Profession.BUTCHER, 2),
+
+        NITWIT(Profession.NITWIT, 1);
+        private final Profession profession;
+        private final int id;
+
+        Career(Profession profession, int id) {
+            this.profession = profession;
+            this.id = id;
+        }
+
+        /**
+         * The profession that this career can be attributed from.
+         *
+         * @return the associated profession
+         */
+        public Profession getProfession() {
+            return profession;
+        }
+
+        /**
+         * The numerical ID of this career.
+         *
+         * @return the numerical ID of this career
+         */
+        public int getId() {
+            return id;
+        }
+    }
 }
